{
  "translation_settings": {
    "provider": "openai",
    "api_key": "YOUR_OPENAI_API_KEY",
    "api_base_url": "https://api.openai.com/v1",
    "model": "gpt-3.5-turbo",
    "source_language": "auto",
    "target_language": "zh-CN",
    "temperature": 0.1,
    "max_tokens": 2000,
    "batch_size": 10,
    "delay_between_requests": 1.0,
    "max_retries": 3,
    "timeout": 30
  },
  "output_settings": {
    "format": "docx",
    "layout": "side_by_side",
    "replace_original": false,
    "output_directory": "./output",
    "keep_temp_files": false,
    "supported_formats": ["docx", "pdf", "markdown", "text", "html"],
    "supported_layouts": ["side_by_side", "paragraph_by_paragraph", "translation_only"]
  },
  "processing_settings": {
    "chunk_size": 1000,
    "overlap_size": 100,
    "preserve_formatting": true,
    "extract_images": false,
    "extract_tables": true,
    "smart_chunking": {
      "enabled": true,
      "max_chunk_chars": 1500,
      "min_chunk_chars": 50,
      "preserve_sentences": true,
      "preserve_paragraphs": true
    },
    "pdf_parsing": {
      "layout_detection": "auto",
      "ocr_enabled": false,
      "remove_headers_footers": true,
      "remove_page_numbers": true
    },
    "text_preprocessing": {
      "remove_extra_whitespace": true,
      "normalize_unicode": true,
      "fix_encoding": true
    },
    "quality_control": {
      "min_translation_length": 5,
      "max_translation_length": 10000,
      "detect_untranslated": true,
      "validate_encoding": true
    }
  },
  "ui_settings": {
    "supported_languages": {
      "auto": "自动检测",
      "zh-CN": "简体中文",
      "zh-TW": "繁体中文",
      "en": "英语",
      "ja": "日语",
      "ko": "韩语",
      "fr": "法语",
      "de": "德语",
      "es": "西班牙语",
      "ru": "俄语",
      "ar": "阿拉伯语",
      "pt": "葡萄牙语",
      "it": "意大利语",
      "th": "泰语",
      "vi": "越南语"
    },
    "file_upload": {
      "max_file_size": 52428800,
      "allowed_extensions": [".pdf"],
      "multiple_files": true
    },
    "progress_tracking": {
      "show_detailed_progress": true,
      "update_interval": 1000,
      "show_time_remaining": true
    }
  },
  "advanced_settings": {
    "caching": {
      "enabled": true,
      "cache_translations": true,
      "cache_parsed_pdfs": true,
      "cache_duration": 86400
    },
    "logging": {
      "level": "INFO",
      "log_translations": false,
      "log_api_calls": true,
      "log_file_operations": true
    },
    "security": {
      "sanitize_filenames": true,
      "validate_file_types": true,
      "scan_for_malware": false
    },
    "performance": {
      "parallel_processing": true,
      "max_workers": 4,
      "memory_limit": 2147483648,
      "timeout_per_file": 3600
    }
  }
}